<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_amount_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/detail_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@+id/detail_amount_text_view"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/detail_distance_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@+id/detail_name_text_view"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/detail_location_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@+id/detail_distance_text_view"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>