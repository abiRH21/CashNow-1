<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/soccer_ball_yellow"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_amount_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/detail_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/detail_amount_text_view"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/detail_distance_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/detail_name_text_view"
        android:layout_centerHorizontal="true"/>
    <TextView

        android:id="@+id/detail_location_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/detail_distance_text_view"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/detail_button"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Offer"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_below="@+id/detail_location_text_view"/>
</RelativeLayout>