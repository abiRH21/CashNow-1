<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:padding="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/offer_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Amount:200 U.S Dollars"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/offer_amount_text_view"

            android:layout_marginLeft="99dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/offer_amount_text_view"
            android:gravity="right"
            android:text="Distance:0.5 miles"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/offer_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_amount_text_view"
            android:layout_alignStart="@+id/offer_amount_text_view"
            android:layout_marginTop="1dp"
            android:text="By: Josh"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_distance_text_view"

            android:layout_marginLeft="197dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/offer_name_text_view"
            android:text="25 mins ago"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>